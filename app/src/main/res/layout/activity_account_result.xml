<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.malik.meetingstest.AccountResult">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titleViewer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nameTitle"
        android:id="@+id/titleViewer"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:textAlignment="textStart"
        android:layout_toRightOf="@+id/moduleView"
        android:layout_toEndOf="@+id/moduleView"
        android:ellipsize="end"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:textColor="#ffffff"
        android:background="#3C8DBC"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/editButton"  />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/headerView"
        android:text="informationPanel"
        android:enabled="false"
        android:focusable="true"
        android:textColor="#000000"
        android:editable="true"
        android:layout_below="@+id/headerTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:linksClickable="false"
        android:autoLink="web"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="subHeading"
        android:id="@+id/headerTitle"
        android:layout_below="@+id/titleViewer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="infoHeader"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:layout_below="@+id/bonusView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/gMapsButton"
        android:src="@mipmap/google_maps_icon"
        android:scaleType="centerCrop"
        android:backgroundTint="#ffffff"
        android:cropToPadding="false"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/moduleView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/headerTitle"
        android:layout_alignRight="@+id/headerView"
        android:layout_alignEnd="@+id/headerView"
        android:text="Title"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bonusView"
        android:textColor="#000000"
        android:text="gjgjggj"
        android:layout_below="@+id/contactTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:enabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/contactTitle"
        android:textColor="#000000"
        android:text="jgjggjgjgj"
        android:layout_below="@+id/headerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/scrollView"
        android:focusable="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This field contains information about the Account"
            android:id="@+id/infoViewer"
            android:textAlignment="gravity"
            android:gravity="left"
            android:enabled="false"
            android:editable="true"
            android:textColor="#000000"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAudio"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:layout_below="@+id/scrollView"
        android:layout_toRightOf="@+id/gMapsButton"
        android:layout_toEndOf="@+id/gMapsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:background="#3C8DBC"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/deleteButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editButton"
        android:background="#3C8DBC"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/updateButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteButton"
        android:background="#3C8DBC"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
